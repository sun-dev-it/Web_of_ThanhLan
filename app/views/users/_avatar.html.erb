<div class="update_avatar" id="div_hide_click">
    <%= form_with(model: @user, url: user_path(@user), method: :patch, local: true) do |form| %>
        <%= form.file_field :avatar, class:"chosse_image_avt" %>
        <input type="button" onclick="hideDiv()" value="Hủy"></input>
        <%= form.submit 'Lưu' %>
    <% end %>
</div>